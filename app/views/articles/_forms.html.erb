<%= form_with(model: @article) do |form| %>
  <div class="form-group my-2">
    <%= form.label :title, style: "display: block", for: "title" %>
    <%= form.text_field :title , class: "form-control", id: "title" %>
    <%= render 'shared/form_errors', form: form, attribute: :title %>
  </div>
  <div class="form-group my-2">
    <%= form.label :categories, style: "display: block" %>
    <%= form.collection_select(:category_ids,  Category.all, :id, :title, options=  {multiple: true}, html_options = {class: "form-select"})%>
    <%= render 'shared/form_errors', form: form, attribute: :category_ids %>
  </div>
  <div class="form-group my-2">
    <%= form.label :description, style: "display: block", for: "description" %>
    <%= form.text_area :description, class: "form-control", id: "description", rows:8 %>
    <%= render 'shared/form_errors', form: form, attribute: :description %>
  </div>
  <div class="d-flex">
    <div class="form-group mt-4">
      <%= form.submit class: "btn btn-success" %>
    </div>
    <div class="mx-3"></div>
    <div class="form-group mt-4">
      <%= link_to "Cancel", articles_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
