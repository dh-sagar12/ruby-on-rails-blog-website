<%= form_with(model: @category) do |form| %>
  <div class="form-group my-2">
    <%= form.label :title, style: "display: block", for: "title" %>
    <%= form.text_field :title , class: "form-control", id: "title" %>
    <%= render 'shared/form_errors', form: form, attribute: :title %>
  </div>
  <div class="d-flex">
    <div class="form-group mt-4">
      <%= form.submit class: "btn btn-success" %>
    </div>
    <div class="mx-3"></div>
    <div class="form-group mt-4">
      <%= link_to "Cancel", categories_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
