<div class="w-25 h-100 mx-auto mt-5">
  <div>
    <h2 class='text-center'>Sign Up</h2>
  </div>
  <%= form_with(scope: :session) do |form| %>
    <div class="form-group my-2">
      <%= form.label :email, style: "display: block", for: "email" %>
      <%= form.email_field :email , class: "form-control", id: "email", placeholder: 'Your Email or Username', required: true %>
    </div>
    <div class="form-group my-2">
      <%= form.label :password, style: "display: block", for: "password" %>
      <%= form.password_field :password , class: "form-control", id: "password", placeholder: 'Your Password',  required: true %>
    </div>
    <div class="d-flex">
      <div class="form-group mt-4">
        <%= form.submit "Login" , class: "btn btn-success"%>
      </div>
      <div class="mx-3"></div>
    </div>
  <% end %>
</div>
