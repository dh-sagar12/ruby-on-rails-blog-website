  <%= form_with(model: @user) do |form| %>
  <div class="form-group my-2">
    <%= form.label :email, style: "display: block", for: "email" %>
    <%= form.text_field :email , class: "form-control", id: "email" %>
    <%= render 'shared/form_errors', form: form, attribute: :email %>
  </div>
  <div class="form-group my-2">
    <%= form.label :username, style: "display: block", for: "username" %>
    <%= form.text_field :username , class: "form-control", id: "username" %>
    <%= render 'shared/form_errors', form: form, attribute: :username %>
  </div>
  <div class="form-group my-2">
    <%= form.label :full_name, style: "display: block", for: "full_name" %>
    <%= form.text_field :full_name , class: "form-control", id: "full_name" %>
    <%= render 'shared/form_errors', form: form, attribute: :full_name %>
  </div>
  <div class="form-group my-2">
    <%= form.label :password, style: "display: block", for: "password" %>
    <%= form.password_field :password , class: "form-control", id: "password" %>
    <%= render 'shared/form_errors', form: form, attribute: :password %>
  </div>
  <div class="d-flex">
    <div class="form-group mt-4">
      <%= form.submit( @user.new_record? ? "Sign Up" : "Update Profile",  class: "btn btn-success" ) %>
    </div>
    <div class="mx-3"></div>
  </div>
<% end %>
